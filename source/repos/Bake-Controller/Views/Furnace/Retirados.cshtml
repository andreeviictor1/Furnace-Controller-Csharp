@model List<Bake_Controller.Models.FurnaceRecord>

@{
    ViewData["Title"] = "Itens Retirados";
}

<h2>Itens Retirados</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Modelo</th>
                <th scope="col">Cliente</th>
                <th scope="col">Hora de Início</th>
                <th scope="col">Hora de Fim</th>
                <th scope="col">Turno</th>
                <th scope="col">Usuário</th>
                <th scope="col">Matrícula</th>
                <th scope="col">Email</th>
                <th scope="col">Login Retirada</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PlacaId</td>
                    <td>@item.Cliente</td>
                    <td>@item.HoraInicio.ToString("g")</td>
                    <td>@item.HoraFim?.ToString("g")</td>
                    <td>@item.Turno</td>
                    <td>@item.Usuario</td>
                    <td>@item.Matricula</td>
                    <td>@item.Email</td>
                    <td>@item.LoginRetirada</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-warning">Nenhum item retirado encontrado.</p>
}

<a href="@Url.Action("Control", "Furnace")" class="btn btn-secondary mt-3">Voltar ao Controle do Forno</a>
